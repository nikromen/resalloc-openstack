proj_cli_dir="$(dirname "$(readlink -f "$0")")"/..
wrapper=$(basename "$0")

export PYTHON=${PYTHON:-`which python3`}
export PYTHONPATH="$proj_cli_dir${PYTHONPATH+:$PYTHONPATH}"
: ${CONFIG_DIR=$proj_cli_dir/etc}
export CONFIG_DIR

exec $PYTHON $proj_cli_dir/bin/"$wrapper" "$@"
